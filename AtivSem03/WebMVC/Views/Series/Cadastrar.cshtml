@model WebMVC.Models.Series

@{
    ViewBag.Title = "Cadastrar";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h2 style="text-decoration: underline">Cadastrar uma Nova Série</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <b class="control-label col-md-2">Nome da Série: </b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.nomeSerie, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nomeSerie, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <b class="control-label col-md-2">Gênero: </b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.generoSerie, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.generoSerie, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <b class="control-label col-md-2">Classificação: </b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.classificacaoSerie, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.classificacaoSerie, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Cadastrar" class="btn btn-success" />
            </div>
        </div>
    </div>

    @section Scripts{
        @Scripts.Render("~/bundles/jqueryval");
    }
}

<div>
    <button class="btn btn-default">@Html.ActionLink("Voltar", "IndexSeries")</button>
</div>
