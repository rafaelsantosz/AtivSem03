@model WebMVC.Models.Series

@{
    ViewBag.Title = "Excluir";
}

<h2 style="text-decoration: underline">Excluir</h2>

<h3>Tem certeza que deseja excluir esta série?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <b>Nome da Série: </b>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nomeSerie)
        </dd>

        <dt>
            <b>Gênero: </b>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.generoSerie)
        </dd>

        <dt>
            <b>Classificação: </b>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.classificacaoSerie)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Excluir" class="btn btn-danger" /> |
            <button class="btn btn-default">@Html.ActionLink("Voltar", "IndexSeries")</button>
        </div>
    }
</div>
