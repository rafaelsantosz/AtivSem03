<style>
    body {
        background-color: #F2F7F2;
    }

    .divItens {
        background-color: #f5f5f5;
    }

    .item:hover {
        box-shadow: 0 0 11px rgba(33,33,33,.3);
        cursor: pointer;
        background-color: rgb(250, 250, 250);
    }
</style>

@{
    ViewBag.Title = "Index";
}

<div class="jumbotron">
    <h1>Bem-Vindo(a) ao .NETFlix</h1>
    <p>
        Assista Filmes e Séries de onde estiver ;)
    </p>

    <button class="btn btn-default">@Html.ActionLink("Menu Administrador", "Menu", "Home")</button>
</div>

<div class="divItens row text-lg-start well">
    <h3>FILMES <span class="glyphicon glyphicon-film"></span></h3>
    @foreach (var item in ViewBag.listaFilmes)
    {
        <div class="item col-lg-3 col-md-4 col-6 well">
            <h4 class="text-center">@item.nomeFilme</h4>
            <p><span class="glyphicon glyphicon-menu-right"></span> @item.generoFilme</p>
            <p><span class="glyphicon glyphicon-info-sign"></span> Classificação: @item.classificacaoFilme</p>
        </div>
    }
</div>

<div class="divItens row text-lg-start well">
    <h3>SÉRIES <span class="glyphicon glyphicon-film"></span></h3>
    @foreach (var item in ViewBag.listaSeries)
    {
        <div class="item col-lg-3 col-md-4 col-6 well">
            <h4 class="text-center">@item.nomeSerie</h4>
            <p><span class="glyphicon glyphicon-menu-right"></span>  @item.generoSerie</p>
            <p><span class="glyphicon glyphicon-info-sign"></span> Classificação: @item.classificacaoSerie</p>
        </div>
    }
</div>

