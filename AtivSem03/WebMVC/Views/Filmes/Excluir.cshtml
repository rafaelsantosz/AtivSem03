@model WebMVC.Models.Filmes

@{
    ViewBag.Title = "Excluir";
}

<h2 style="text-decoration: underline">Excluir</h2>

<h3>Tem certeza que deseja excluir este filme?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <b>Nome do Filme: </b>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nomeFilme)
        </dd>

        <dt>
            <b>Gênero: </b>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.generoFilme)
        </dd>

        <dt>
            <b>Classificação: </b>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.classificacaoFilme)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Excluir" class="btn btn-danger" /> |
            <button class="btn btn-default">@Html.ActionLink("Voltar", "IndexFilmes")</button>
        </div>
    }
</div>
